{
  "name": "vue-ele-admin-pure",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Mole <731913218@qq.com>",
  "homepage": "https://github.com/yourVictor/vue-ele-admin-pure",
  "scripts": {
    "serve": "npm run lint && vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:test": "vue-cli-service build --mode test",
    "build:uat": "vue-cli-service build --mode uat",
    "build:prod": "vue-cli-service build --mode prod && npm run build",
    "build:ghPages": "vue-cli-service build --mode ghPages",
    "mkdir": "if not exist \".\\dist\\package\" (cd dist && mkdir package && cd package && mkdir test uat prod)",
    "war:test": "npm run mkdir && cd dist/test && jar -cvf ../package/test/projectName.war .",
    "war:uat": "cd dist/uat && jar -cvf ../package/uat/projectName.war .",
    "war:prod": "cd dist/prod && jar -cvf ../package/prod/projectName.war .",
    "server:test": "node localServer.js --mode test",
    "server:uat": "node localServer.js --mode uat",
    "server:prod": "node localServer.js --mode prod",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit"
  },
  "dependencies": {
    "animate.css": "^3.7.2",
    "axios": "^0.19.0",
    "core-js": "^2.6.5",
    "echarts": "^4.2.1",
    "element-ui": "^2.10.0",
    "js-cookie": "^2.2.0",
    "moment": "^2.24.0",
    "nprogress": "^0.2.0",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.10",
    "vue-content-loader": "^0.2.2",
    "vue-i18n": "^8.11.2",
    "vue-meta": "^2.0.4",
    "vue-router": "^3.0.3",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-plugin-pwa": "^3.8.0",
    "@vue/cli-plugin-unit-jest": "^3.8.0",
    "@vue/cli-service": "^3.8.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-component": "^1.1.1",
    "compression": "^1.7.4",
    "compression-webpack-plugin": "^3.0.0",
    "connect-history-api-fallback": "^1.6.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "express": "^4.17.1",
    "lint-staged": "^8.1.5",
    "mockjs": "^1.0.1-beta3",
    "sass": "^1.18.0",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-element": "^1.0.1",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
